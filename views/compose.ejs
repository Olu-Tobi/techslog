<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-3">
    <label for="newText" class= "form-label">Title</label>
    <input type="text" name="postTitle" class="form-control">
  </div>
  <div class="mb-3">
    <label for="postImage" class= "form-label">Image URL</label>
    <input name="postImage" rows="8" cols="80" class="form-control"/>
  </div>
  <div class="mb-3">
    <label for="postBody" class= "form-label">Post</label>
    <textarea name="postBody" rows="8" cols="80" class="form-control"></textarea>
  </div>

   <button type="submit" class="btn publish-btn">Publish</button>

</form>



<%- include('partials/footer'); -%>
